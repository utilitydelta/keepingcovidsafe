@page
@model KeepingCovidSafe.Pages.Visit.CreateModel

@{
    ViewData["Title"] = "Sign In";
    ViewData["HideHeader"] = "True";
}

<h1>@Model.Venue?.Name</h1>
<h4>Visitor Sign In</h4>
<hr />
@if (Model.Venue != null)
{
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Visit.VenueId" />
                <div class="form-group">
                    <label asp-for="Visit.PhoneNumber" class="control-label"></label>
                    <input inputmode="numeric" pattern="[0-9]*" type="text" asp-for="Visit.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Visit.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Visit.Name" class="control-label"></label>
                    <input asp-for="Visit.Name" class="form-control" />
                    <span asp-validation-for="Visit.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Visit.Email" class="control-label"></label>
                    <input asp-for="Visit.Email" class="form-control" />
                    <span asp-validation-for="Visit.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Sign In" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
}
else
{
    <h4>Sorry, this venue is no longer active.</h4>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
