@page
@model KeepingCovidSafe.Pages.ContactUsModel

@{
    ViewData["Title"] = "Contact Us";
}

<h1>Contact Us</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ContactUsDto.EmailAddress" class="control-label"></label>
                <input asp-for="ContactUsDto.EmailAddress" class="form-control" />
                <span asp-validation-for="ContactUsDto.EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactUsDto.Message" class="control-label"></label>
                <textarea rows="10" asp-for="ContactUsDto.Message" class="form-control" ></textarea>
                <span asp-validation-for="ContactUsDto.Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
